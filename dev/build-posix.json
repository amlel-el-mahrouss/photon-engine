{
  "compiler_path": "clang++",
  "compiler_std": "c++20",
  "headers_path": ["./", "/usr/include/GNUstep", "./core", "../vendor", "../vendor/app-kit/dev", "/usr/lib/gcc/x86_64-linux-gnu/13/include"],
  "sources_path": [
    "src/browser/*.mm",
    "src/core/*.mm",
    "src/network/*.mm",
    "src/plugin/*.mm",
    "src/dom/*.mm",
    "src/js/*.mm"
  ],
  "output_name": "./dist/photon",
  "compiler_flags": [
    "$(pkg-config openssl --cflags --libs)",
    "-lobjc",
    "-lgnustep-base",
    "-lgnustep-gui",
    "-fconstant-string-class=NSConstantString"
  ],
  "cpp_macros": [
    "__PHOTON__",
    "__AMD64_PHOTON__",
    "kPhotonVersion=0x0100",
    "kPhotonVersionHighest=0x0100",
    "kPhotonVersionLowest=0x0100"
  ]
}
